<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PhonePickerConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/StartCirclePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartCirclePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StopCirclePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="StopCirclePicker"
        app:layout_constraintStart_toEndOf="@+id/StartCirclePicker"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/InvalidateCirclePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="InvalidateCirclePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartCirclePicker" />
</androidx.constraintlayout.widget.ConstraintLayout>